<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>vertical</type>
        <pos>-0.01 0.0</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.27 0.27</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>
		<logoAlignment>left</logoAlignment> 
         <zIndex>7</zIndex>			
      </carousel> 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/posterize_main.png</path>
      </image> 	  
      <text name="systemInfo">     
         <pos>0.14 0.943</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/Casanova Scotia.otf</fontPath>
	     <fontSize>0.02</fontSize>
         <zIndex>10</zIndex>	     
      </text>            
   </view>
</feature>


